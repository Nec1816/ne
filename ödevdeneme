choose='x'
number=int(input('put a number here to make a rectangular'))
lastnumber=int(number*(number+1)/2)
while choose!='v' and choose!='h':
    choose=input('v for vertical h for horizontal')
if choose=='v':
    for a in range(1,number+1):
        for b in range(int(((a*(a-1)/2)+1)),int(((a*(a+1)/2)+1))):
             if b==(a*(a+1)/2):
                 print(b)
             else:
                 print(b, end=' ')


